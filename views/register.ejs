<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head') %>

<body>

    <%- include('partials/header') %>
        
    <main class="register">
        <form action="/" method="POST">
            <div class="campo">
                <label for="nombre">Nombre y apellido</label>
                <input type="text" name="nombre_apellido" id="nombre" required>
                <span class="feedback"></span>
            </div>
            <div class="campo">
                <label for="mail">e-mail</label>
                <input type="email" name="mail" id="mail" placeholder="tunombre@ejemplo.com" required>
                <span class="feedback"></span>
            </div>
            <div class="campo">
                <label for="usuario">Nombre de usuario</label>
                <input type="text" name="usuario" id="usuario" required>
                <span class="feedback"></span>
            </div>
            <div class="campo">
                <label for="fechanac">Fecha de nacimiento</label>
                <input type="date" name="fecha_nacimiento" id="fechanac">
            </div>
            <div class="campo">
                <label for="domicilio">Domicilio</label>
                <input type="text" name="domicilio" id="domicilio">
                <span class="feedback"></span>
            </div>
            <div class="campo">
                <label>Perfil de usuario</label>
                <div class="opciones_radio">
                    <div class="opcion">
                        <input type="radio" name="tipo_usuario" id="comprador" value="c" required>
                        <label for="comprador">Comprador</label>
                    </div>
                    <div class="opcion">
                        <input type="radio" name="tipo_usuario" id="vendedor" value="v" required>
                        <label for="vendedor">Vendedor</label>
                    </div>
                </div>
            </div>
            <div class="campo">
                <label>Categorías de interés</label>
                <div class="campo_categorias">
                    <div class="opcion">
                        <input type="checkbox" name="categorias" id="Electro" value="e">
                        <label for="Electro">Electro</label>
                    </div>
                    <div class="opcion">
                        <input type="checkbox" name="categorias" id="Moda" value="m">
                        <label for="Moda">Moda</label>
                    </div>
                    <div class="opcion">
                        <input type="checkbox" name="categorias" id="Hogar" value="h">
                        <label for="Hogar">Hogar</label>
                    </div>
                    <div class="opcion">
                        <input type="checkbox" name="categorias" id="Jugetería" value="j">
                        <label for="Jugetería">Jugetería</label>
                    </div>
                    <div class="opcion">
                        <input type="checkbox" name="categorias" id="Vida_sana" value="v">
                        <label for="Vida_sana">Vida sana</label>
                    </div>
                </div>
            </div>
            <div class="campo_foto">
                <label for="foto">Foto de usuario</label>
                <input type="file" name="foto_usuario" id="foto" accept=".png, .jpg">
                <span class="feedback"></span>
            </div>
            <div class="campo">
                <label for="pass">Contraseña</label>
                <input type="password" id="pass" minlength="8" required>
                <span class="feedback"></span>
            </div>
            <div class="campo">
                <label for="passconf">Confirmar contraseña</label>
                <input type="password" name="pass" id="passconf" minlength="8" required>
                <span class="feedback"></span>
            </div>
            <div class="botones">            
                <button type="submit">Enviar</button>
                <button type="reset">Borrar datos</button>
            </div>
        </form>
    </main>

    <%- include('partials/footer') %>

</body>
</html>