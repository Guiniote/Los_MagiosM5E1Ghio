<article>
    <div class="imagen">
        <img src="/images/<%= product.image %>" alt="imagen <%= product.name %>" width="100%">
    </div>
    <div class="infoart">
        <div class="camion">
            <i class="fas fa-truck"></i>
        </div>
        <p class="precio">$<%= product.price %> </p>
        <p class="descuentos"><%= product.descuento %>% OFF</p>
        <p class="descripciones"><%= product.name %></p>
    </div>
</article>